# FinRadar 市场追踪服务环境变量配置
# 复制此文件为 .env 并修改配置

# ==================== 运行配置 ====================
# 运行模式: once (单次) / cron (定时)
RUN_MODE=cron

# 定时调度表达式 (默认每天早上 8:30)
# 格式: 分 时 日 月 星期
# 示例:
#   30 8 * * *     - 每天 8:30
#   0 9,18 * * *   - 每天 9:00 和 18:00
#   */30 * * * *   - 每30分钟
CRON_SCHEDULE=30 8 * * *

# 启动时是否立即执行一次
IMMEDIATE_RUN=true

# ==================== 数据源开关 ====================
# A股市场数据 (基于 AkShare，无需 API Key)
ENABLE_STOCK_CN=true

# 贵金属数据 (基于 Yahoo Finance，无需 API Key)
ENABLE_PRECIOUS_METAL=true

# 加密货币数据 (基于 CoinGecko，无需 API Key)
ENABLE_CRYPTO=true
# 要追踪的币种 (逗号分隔)
CRYPTO_COINS=bitcoin,ethereum,solana,bnb,xrp,dogecoin
# 计价货币
CRYPTO_VS_CURRENCY=usd

# 期货数据 (基于 AkShare + yfinance)
ENABLE_FUTURES=true

# GitHub 趋势 (可选 Token 获取更多数据)
ENABLE_GITHUB=true
GITHUB_TOKEN=

# ==================== 通知配置 (可选) ====================

# 飞书机器人 Webhook
FEISHU_WEBHOOK_URL=

# Telegram 机器人
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 钉钉机器人 Webhook
DINGTALK_WEBHOOK_URL=

# 企业微信机器人 Webhook
WEWORK_WEBHOOK_URL=

# 邮件通知
EMAIL_FROM=
EMAIL_PASSWORD=
EMAIL_TO=
EMAIL_SMTP_SERVER=
EMAIL_SMTP_PORT=
